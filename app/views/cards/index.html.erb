<%
    suits = ["hearts", "spades", "clubs", "diamonds"]
    ranks = ["2", "3", "4", "5", "6", "7", "8", "9", "10", "jack", "queen", "king", "ace"]
    cards = []

    for suit in suits
        for rank in ranks
            new = "#{rank}_of_#{suit}" 
            if not cards.include?(new)
                cards.append(new)        
            end
        end
    end

    card1 = cards.sample
    
    card2 = cards.sample


%>

<h1>Drawing cards!</h1>

<p>
    <img src="/images/cards/<%= card1 %>.svg">
    <br>
    <img src="/images/cards/<%= card2 %>.svg">
</p>

<p>
    <a href="/cards">Draw again</a>
</p>